{
  "manifest_version": 3,
  "name": "GhostKey Biometric Authentication",
  "version": "1.0.0",
  "description": "Multi-modal biometric authentication using keystroke dynamics and voice recognition for secure login",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GhostKey Authentication"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["meyda.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
